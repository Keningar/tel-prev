{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <style scoped="scoped">
        .category-label
        {
            vertical-align: middle;
            padding-right: .5em;
        }
        #category
        {
            vertical-align: middle;
        }
        .toolbar {
            float: right;
            margin-right: .8em;
        }
        .icon_search {
            background-image:url('{{ asset('public/images/images_crud/ver.png') }}') !important;
        }
        .icon_limpiar {
            background-image:url('{{ asset('public/images/images_crud/edit-clear.png') }}') !important;
        } 
        .icon_add {
            background-image:url('{{ asset('public/images/images_crud/plus.png') }}') !important;
        } 
        .icon_delete {
            background-image:url('{{ asset('public/images/images_crud/trash.png') }}') !important;
        }                 
    </style>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script>
        var strUrlGridDocumentosFinancieros  = "{{ path('consolidado_documentos_grid') }}";
        var strUrlGetEstadosDocumentos       = "{{ path('infodocumentofinancierocab_estados') }}";
        var intIdPunto                       = "{{ intIdPunto }}";
        var strUrlGetTipoDocumentoFinanciero = "{{ path('dashboardInicioBusqueda_getTiposDocumento') }}";
    </script>         
{% endblock %}


{% block contenido_izq %}
    <div id="titulo_content">
        <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
        <h1>Listado de Documentos Financieros</h1>
    </div>

    {% if (intIdPunto == 0) %}
        <div class="info-error">Para consultar los documentos financieros debe tener un punto en sesion</div>
    {% else %}
        <script type="text/javascript" src="{{ asset('bundles/financiero/js/documentosFinancieros/index.js?1') }}"></script>
        <div class="dashboard_content k-content">
            <div id="example" class="k-content">
                <table width="100%" cellpadding="1" cellspacing='0'  border='0'>
                    <tr bgcolor='#ffffff'>
                        <td bgcolor='#ffffff'>
                            <div id='filtroDocumentosFinancieros'></div>
                        </td>
                    </tr>	
                    <tr bgcolor='#ffffff'>
                        <td bgcolor='#ffffff'>
                            <div id='gridDocumentosFinancieros'></div>
                        </td>
                    </tr>
                </table>      
            </div>
        </div>
    {% endif %}
{% endblock contenido_izq %}
