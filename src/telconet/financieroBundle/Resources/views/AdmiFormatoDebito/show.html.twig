{% extends "::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block contenido_izq %}
<div id="titulo_content">
	<img src="{#{ asset('public/images/'~ img_opcion_menu ~ '') }#}" class="imagen-titulo-content">
	<h1>Ver Formato Debito</h1>
</div>
<div class="body_content">
<table class="record_properties" width='100%'>
    <tbody>
        <tr>
            <td><b>Banco:</b></td>
            <td>{{ entity.bancoId.descripcionBanco }}</td>
			<td>&nbsp;</td>
            <td><b>Tipo Tarjeta / Cuenta:</b></td>
            <td>{{ entity.tipoCuentaId.descripcionCuenta }}</td>			
        </tr>
        <tr>
            <td><b>Total cod. seguridad:</b></td>
            <td>{{ entity.totalCodseguridad }}</td>
			<td>&nbsp;</td>
            <td><b>Total caracteres:</b></td>
            <td>{{ entity.totalCaracteres }}</td>						
        </tr>
        <tr>
            <td><b>Caracter Empieza:</b></td>
            <td>{{ entity.caracterEmpieza }}</td>
			<td>&nbsp;</td>
            <td><b>Es tarjeta:</b></td>
            <td>{{ entity.esTarjeta }}</td>					
        </tr>
        <tr>
            <td><b>Estado:</b></td>
            <td>{{ entity.estado }}</td>
			<td>&nbsp;</td>
            <td><b>&nbsp;</b></td>
            <td>&nbsp;</td>						
        </tr>
    </tbody>
</table>
</div>

<div class="body_content k-content">
    <div id="example" class="k-content">
    <table width="100%" cellpadding="1" cellspacing='0'  border='0'>	
            <tr bgcolor='#ffffff'>
                     <td bgcolor='#ffffff'><div id='lista_detalles'></div></td>
            </tr>

    </table>        
            
       
                       
        <script>
        var url_grid = "{{ path('admiformatodebito_grid_show',{'id':entity.id}) }}";
        var url_campos = "{{ path('admiformatodebito_getListadoCampos') }}";
		var url_grabar = "{{ path('admiformatodebito_asignarValidaciones') }}";
        </script>        
         <script type="text/javascript" src="{{ asset('./bundles/financiero/js/admiformatodebito/show.js') }}"></script>
		<script type="text/javascript" src="{{ asset('./bundles/financiero/js/admiformatodebito/ingresarValidaciones.js') }}"></script>		 
    </div>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="4"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ entity.usrCreacion }}</td>

              {% if(entity.usrUltMod is not null) %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ entity.usrUltMod }}</td>
              {% endif %}

              {% if(entity.estado == 'Inactivo') %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ entity.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ entity.feCreacion | date("d M Y") }}</td>

              {% if(entity.feUltMod is not null) %}
              <th>Fecha:</th>
              <td >{{ entity.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(entity.estado == 'Inactivo') %}
              <th>Fecha:</th>
              <td>{{ entity.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ entity.feCreacion | date("H:i:s") }}</td>

              {% if(entity.feUltMod is not null) %}
              <th>Hora:</th>
              <td>{{ entity.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(entity.estado == 'Inactivo') %}
              <th>Hora:</th>
              <td>{{ entity.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>
           

        </tbody>
    </table>
</div>

<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admiformatodebito') }}">Regresar</a>
        </span>
    </p>
</div>  

{% endblock contenido_izq %}
{% block contenido_der %}
	<div class="acciones_relacionadas">
		<a href="{{ path('admiformatodebito_new') }}" class="button-nuevo-registro">
			<img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="11" height="11" />
			&nbsp;Nuevo Formato Debito
		</a>
	</div>
	<br />
		<ul class="form_actions">
			<li>
				<a class="button-editar" href="{{ path('admiformatodebito_edit', { 'id': entity.id }) }}">
					Editar
				</a>
			</li>
		</ul>
		<div class="titulo-acciones-relacionadas">
			Acciones Relacionadas
		</div>
		<ul class="listado_acciones_relacionadas">  
		</ul>
{% endblock contenido_der %}