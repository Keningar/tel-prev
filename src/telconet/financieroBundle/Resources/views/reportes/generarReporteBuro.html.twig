{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h4>Generar Reporte para el Bur&oacute; de Cr&eacute;dito</h4>
</div>
<div class="dashboard_content k-content">
    <div id="example" class="k-content">
        <form id='form_reportes' action="{{ path('reportes_crear_reporte_buro') }}" method="post" role="form"
              onsubmit="return mostrarVentana();">
            <div class="row">
                <div class="col-xs-offset-1 col-xs-4" >
                    <label for='clientesBuenos' class='col-xs-4'>Clientes Buenos:</label>
                    <div class="input-group">
                        <span class="input-group-addon">></span>
                        <input type="text" placeholder="{{ strClientesBuenos }}" class="form-control" id="clientesBuenos" name="clientesBuenos"
                               onkeypress="return validarNumeros(event, this);" onpaste="return false;" >
                    </div>
                </div>
                <div class="col-xs-offset-1 col-xs-4" >
                    <label for='clientesMalos' class='col-xs-4'>Clientes Malos:</label>
                    <div class="input-group">
                        <span class="input-group-addon">></span>
                        <input type="text" placeholder="{{ strClientesMalos }}" class="form-control" id="clientesMalos" name="clientesMalos"
                               onkeypress="return validarNumeros(event, this);" onpaste="return false;" >
                    </div>
                </div>
            </div>  
            <div class="body_content">      
                <div class="buttons">
                    <p>
                        <button type="submit" class="button-crud">Generar</button>
                        <span class="height20px">
                            &nbsp;&nbsp;
                        </span>
                        <span class="height20px">
                            <a class="button-crud" href="{{ path('reportes_buro') }}">Regresar</a>
                        </span>                                        
                    </p>
		</div>         
            </div>
        </form>
    </div>
</div>
{% endblock contenido_izq %}

