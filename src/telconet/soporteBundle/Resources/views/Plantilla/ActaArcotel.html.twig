			<tr class="tr3">
				<th colspan="6" class="alineadoIzquierda">&nbsp;COORDINADOR: {{ NombreCoordinador }}</th>
				<th colspan="3" class="alineadoIzquierda">&nbsp;DEPARTAMENTO: {{ NombreDepartamento }}</th>
