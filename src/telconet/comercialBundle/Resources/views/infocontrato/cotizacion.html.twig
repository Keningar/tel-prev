            font-size:14px;
            vertical-align:top;
            text-align:left;
            border-right:solid 1px #000;
        }

        .nt_footerBox:last-of-type {
            border:none;
        }

        .nt_footerBox a {
            color:#666;
        }

        .sub-menu {
            position:absolute;
            text-align:center;
            margin-top:0px !important;
        }
        .sub-menu li {
            display:block;
            text-align:left;
            padding: 0px 15px;
        }
        .nt_menu_cat {
            display:block;
            padding:14px;
            text-align:center;
            text-transform:uppercase;
            background:#111111;
            border-bottom:solid 2px #000;
            cursor:pointer;
        }
        .nt_menu_b1 {
            width:20%;
            display:inline-block;
            vertical-align:top;
        }
        .nt_menu_b2 {
            width:79%;
            display:inline-block;
            vertical-align:top;
            padding:0 3%;
