        footer {
            background:#1a1a1a;
            padding:0px;
            color:#666666;
        }

        .footer {
            width:90%;
            max-width:1366px;
            margin:auto;
            font-size:12px;
            text-align:center;
            padding:30px 0px;
        }

        footer h3 {
            font-family: 'Roboto Condensed', sans-serif;
            font-size:18px;
            color:#FFF;
            font-weight:300;
        }

        footer ul {
            padding-left:20px;
        }
        .nt_footerBox {
            display:inline-block;
            width:16%;
            padding:2px 1%;
