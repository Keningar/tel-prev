{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style scoped="scoped">
		.category-label
		{
			vertical-align: middle;
			padding-right: .5em;
		}
		#category
		{
			vertical-align: middle;
		}
		.toolbar {
			float: right;
			margin-right: .8em;
		}
		.icon_search {
			background-image:url('{{ asset('public/images/images_crud/ver.png') }}') !important;
                }
		.icon_limpiar {
			background-image:url('{{ asset('public/images/images_crud/edit-clear.png') }}') !important;
                } 
		.icon_add {
			background-image:url('{{ asset('public/images/images_crud/plus.png') }}') !important;
                } 
		.icon_delete {
			background-image:url('{{ asset('public/images/images_crud/trash.png') }}') !important;
                }                 
    </style>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script>
		var url_store="{{ path('infocontrato_grid') }}";
		var url_estado='{{path('infocontrato_lista_estados')}}';
        var url_forma_pago='{{path('infocontrato_formas_pago')}}';
		var strUrlGetCorreosCliente='{{path('infocontrato_get_correos_cliente')}}';
		var urlNotificarAutorizar='{{path('infocontrato_notificar_autorizar')}}';
		var urlCorreoAutorizar='{{path('infocontrato_correo_autorizar')}}';
		var urlAutorizarContratoFisico='{{path('infocontrato_autorizar_contrato_fisico')}}';
		var urlReenviarDocumentoContrato='{{path('infocontrato_reenviar_documento_contrato')}}';
		var idContrato = {{idContrato}};
    </script>
    <script type="text/javascript" src="{{ asset('./bundles/comercial/js/contrato/index.js') }}"></script>
{% endblock %}

{% block contenido_izq %}
	<div id="titulo_content">
		<img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
		<h1>Listado de Contratos</h1>
	</div>
	<div class="body_content k-content">
	    <div id="example" class="k-content">
	    <table width="100%" cellpadding="1" cellspacing='0'  border='0'>
	            <tr bgcolor='#ffffff'>
	                     <td bgcolor='#ffffff'><div id='filtro_prospectos'></div></td>
	            </tr>	
	            <tr bgcolor='#ffffff'>
	                     <td bgcolor='#ffffff'><div id='lista_prospectos'></div></td>
	            </tr>
	    </table>        
	    </div>
	</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <div class="acciones_relacionadas">
        {#{tieneActivoPendiente}#}
        {%if(tieneActivoPendiente=='N')%}
        <a class="button-nuevo-registro" href="{{ path('infocontrato_new',{idper:idper}) }}">
            <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
            &nbsp;Nuevo Contrato
        </a>
        {%endif%}    
    </div>
    <ul class="listado_acciones_relacionadas"></ul>
{% endblock contenido_der %}
