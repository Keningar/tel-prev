{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Ver Tipo de Conexion</h1>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Tipo Conexion</th>                    
                <td width="15%">{{ tipoconexion.nombreTipoConexion }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Descripci&oacute;n Tipo Conexion</th>        
                <td width="15%">{{ tipoconexion.descripcionTipoConexion }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%">Estado</th>                             
                <td width="15%">{{ tipoconexion.estado }}</td>        
                <td width="1%"></td>
                
                <td width="8%">&nbsp;</td>
                <th width="25%"></th>        
                <td width="15%"></td>        
                <td width="1%"></td>
            </tr>

        </tbody>
    </table>
</div>
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admitipoconexion') }}">
                    Regresar
            </a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ tipoconexion.usrCreacion }}</td>

              {% if(tipoconexion.estado=="Modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ tipoconexion.usrUltMod }}</td>
              {% endif %}

              {% if(tipoconexion.estado=="Eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ tipoconexion.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ tipoconexion.feCreacion | date("d M Y") }}</td>

              {% if(tipoconexion.estado=="Modificado") %}
              <th>Fecha:</th>
              <td >{{ tipoconexion.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(tipoconexion.estado=="Eliminado") %}
              <th>Fecha:</th>
              <td>{{ tipoconexion.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ tipoconexion.feCreacion | date("H:i:s") }}</td>

              {% if(tipoconexion.estado=="Modificado") %}
              <th>Hora:</th>
              <td>{{ tipoconexion.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(tipoconexion.estado=="Eliminado") %}
              <th>Hora:</th>
              <td>{{ tipoconexion.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
    <ul class="form_actions">
		{% if is_granted('ROLE_126-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admitipoconexion_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Tipo Conexion
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_126-4') %}
        <li>
            <a class="button-editar" href="{{ path('admitipoconexion_edit', { 'id': tipoconexion.id }) }}">
                
                &nbsp;Editar Tipo Conexion
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_126-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admitipoconexion_delete', { 'id': tipoconexion.id }) }}">
                
                &nbsp;Eliminar Tipo Conexion
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}

