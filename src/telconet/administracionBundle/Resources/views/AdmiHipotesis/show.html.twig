{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Hipotesis</h1>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%"> Nombre Hipotesis:</th>
                <td width="15%">{{ hipotesis.nombreHipotesis }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Descripci&oacute;n Hipotesis</th>        
                <td width="15%">{{ hipotesis.descripcionHipotesis }}</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Estado:</th>
                <td>{{ hipotesis.estado }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Tipo de Caso</th>
                <td width="15%">{% if hipotesis.tipoCasoId %} {{ nombreTipoCaso }} {% else %} Todos {% endif %}</td>
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admihipotesis') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ hipotesis.usrCreacion }}</td>

              {% if(hipotesis.estado|lower=="modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ hipotesis.usrUltMod }}</td>
              {% endif %}

              {% if(hipotesis.estado|lower=="eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ hipotesis.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ hipotesis.feCreacion | date("d M Y") }}</td>

              {% if(hipotesis.estado|lower=="modificado") %}
              <th>Fecha:</th>
              <td >{{ hipotesis.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(hipotesis.estado|lower=="eliminado") %}
              <th>Fecha:</th>
              <td>{{ hipotesis.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ hipotesis.feCreacion | date("H:i:s") }}</td>

              {% if(hipotesis.estado|lower=="modificado") %}
              <th>Hora:</th>
              <td>{{ hipotesis.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(hipotesis.estado|lower=="eliminado") %}
              <th>Hora:</th>
              <td>{{ hipotesis.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_55-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admihipotesis_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Hipotesis
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_55-4') %}
        <li>
            <a class="button-editar" href="{{ path('admihipotesis_edit', { 'id': hipotesis.id }) }}">
                &nbsp;Editar Hipotesis
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_55-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admihipotesis_delete', { 'id': hipotesis.id }) }}">
                &nbsp;Eliminar Hipotesis
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}