{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Ver Hilo</h1>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Clase Tipo Medio:</th>
                <td width="15%">{{ objeto.nombreClaseTipoMedio }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Tipo Medio:</th>        
                <td width="15%">{{ objeto.tipoMedioId }}</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%">Estado:</th>
                <td width="15%">{{ objeto.estado }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Descripcion:</th>              
                <td width="15%">{{ objeto.descripcionClaseTipoMedio }}</td>
                <td width="1%"></td>
            </tr>

        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admiclasetipomedio') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ objeto.usrCreacion }}</td>

              {% if(objeto.estado=="Activo") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ objeto.usrUltMod }}</td>
              {% endif %}

              {% if(objeto.estado=="Eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ objeto.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ objeto.feCreacion | date("d M Y") }}</td>

              {% if(objeto.estado=="Activo") %}
              <th>Fecha:</th>
              <td >{{ objeto.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(objeto.estado=="Eliminado") %}
              <th>Fecha:</th>
              <td>{{ objeto.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ objeto.feCreacion | date("H:i:s") }}</td>

              {% if(objeto.estado=="Activo") %}
              <th>Hora:</th>
              <td>{{ objeto.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(objeto.estado=="Eliminado") %}
              <th>Hora:</th>
              <td>{{ objeto.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
    <ul class="form_actions">
		{% if is_granted('ROLE_274-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admiclasetipomedio_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Clase Tipo Medio
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_274-4') %}
        <li>
            <a class="button-editar" href="{{ path('admiclasetipomedio_edit', { 'id': objeto.id }) }}">                
                &nbsp;Editar Clase Tipo Medio
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_274-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admiclasetipomedio_delete', { 'id': objeto.id }) }}">                
                &nbsp;Eliminar Clase Tipo Medio
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}

