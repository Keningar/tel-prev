{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Ver Tipo de Medio</h1>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Tipo Medio</th>                    
                <td width="15%">{{ tipomedio.nombreTipoMedio }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Descripci&oacute;n Tipo Medio</th>        
                <td width="15%">{{ tipomedio.descripcionTipoMedio }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%">Clase Tipo Medio</th>        
                <td width="15%">{{ tipomedio.codigoTipoMedio }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Estado</th>                             
                <td width="15%">{{ tipomedio.estado }}</td>        
                <td width="1%"></td>
            </tr>

        </tbody>
    </table>
</div>
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admitipomedio') }}">
                    Regresar
            </a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ tipomedio.usrCreacion }}</td>

              {% if(tipomedio.estado=="Modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ tipomedio.usrUltMod }}</td>
              {% endif %}

              {% if(tipomedio.estado=="Eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ tipomedio.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ tipomedio.feCreacion | date("d M Y") }}</td>

              {% if(tipomedio.estado=="Modificado") %}
              <th>Fecha:</th>
              <td >{{ tipomedio.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(tipomedio.estado=="Eliminado") %}
              <th>Fecha:</th>
              <td>{{ tipomedio.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ tipomedio.feCreacion | date("H:i:s") }}</td>

              {% if(tipomedio.estado=="Modificado") %}
              <th>Hora:</th>
              <td>{{ tipomedio.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(tipomedio.estado=="Eliminado") %}
              <th>Hora:</th>
              <td>{{ tipomedio.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
    <ul class="form_actions">
		{% if is_granted('ROLE_131-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admitipomedio_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Tipo Medio
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_131-4') %}
        <li>
            <a class="button-editar" href="{{ path('admitipomedio_edit', { 'id': tipomedio.id }) }}">
                
                &nbsp;Editar Tipo Medio
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_131-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admitipomedio_delete', { 'id': tipomedio.id }) }}">
                
                &nbsp;Eliminar Tipo Medio
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}

