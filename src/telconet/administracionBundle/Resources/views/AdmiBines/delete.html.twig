                <td width="8%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
            <tr height='20px'>
                <td width="8%">&nbsp;</td>
                <th width="8%"> Tarjeta:</th>
                <td width="15%">{{ entity.tarjeta }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
            <tr height='20px'>
                <td width="8%">&nbsp;</td>
