                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>

</div>	
<div class="body_content" >
    <form id='admibines_form'  method="post" {{ form_enctype(form) }} class="formulario">
        <div>{{ form_label(form.motivo_id) }} {{ form_widget(form.motivo_id) }}</div>
        <div>{{ form_label(form.motivo_descripcion) }} {{ form_widget(form.motivo_descripcion) }}</div>
    </form>
</div>
<div class="body_content">
    <div id="form_eliminarBin_twig_js" />
</div>

