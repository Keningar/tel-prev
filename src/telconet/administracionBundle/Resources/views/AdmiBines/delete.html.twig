{% extends "::layout.html.twig" %}

{% block javascripts%}
    {{ parent() }}
<script>
    var urlGetMotivos = '{{ path('admibines_getMotivosAnulacionBines') }}';
    var urlEliminarBIN = '{{ path('admibines_eliminarBin') }}';
