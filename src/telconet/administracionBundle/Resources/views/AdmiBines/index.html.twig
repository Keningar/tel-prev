{% extends "::layout.html.twig" %}

{% block javascripts%}
    {{ parent() }}
<script>
    var urlGridBines = '{{path('admibines_grid')}}';
</script>
<script type="text/javascript" src="{{ asset('./bundles/administracion/js/AdmiBines/index.js?1') }}"></script>
{% endblock %}

{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('adm-fin-bin.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Listado de Bines</h1>
</div>
<div class="body_content k-content">
    <form action="{{ path('admibines_exportarAsociados') }}" method="post">
        <input type='hidden' name='strBinNuevo' id='strBinNuevo' value='' />
        <input type='hidden' name='strDescripcion' id='strDescripcion' value='' />
        <input type='hidden' name='strTarjeta' id='strTarjeta' value='' />
        <input type='hidden' name='strBanco' id='strBanco' value='' />		
        <input type='hidden' name='strEstado' id='strEstado' value='' />	
        <table width="100%" cellpadding="1" cellspacing='0'  border='0'>
            <tr>
                <td><div id='filtroBines'/></td>
            </tr>	
            <tr>
                <td><div id="gridListaBines"/></td>
            </tr>
        </table> 
    </form>	
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
<div class="acciones_relacionadas">
    {% if is_granted('ROLE_294-2797') %}
    <a class="button-nuevo-registro" href="{{ path('admibines_new') }}">
        <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
        &nbsp;Nuevo BIN
    </a>
    {% endif %}
</div>
{% endblock contenido_der %}
                    