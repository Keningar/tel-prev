{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('public/js/kendo2012_1/source/styles/kendo.common.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('public/js/kendo2012_1/source/styles/kendo.default.css') }}" type="text/css" rel="stylesheet" />
    <style scoped="scoped">
        .alineando {
                left: 42em;
                position: absolute;
                top: 44em;
        }
    </style>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script src="{{ asset('public/js/kendo2012_1/js/jquery.min.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('public/js/kendo2012_1/js/kendo.web.min.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('public/js/kendo2012_1/js/kendo.dropdownlist.min.js') }}" type="text/javascript"></script> 
{% endblock %}

{% block contenido_izq %}
    <div id="titulo_content">
		<img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
        <h1>Nuevo Tag</h1>
    </div>
    <div class="body_content">
        <form id='form_new_tag' action="{{ path('admitag_create') }}" method="post" {{ form_enctype(form) }} class='formulario' novalidate="novalidate" onsubmit="return grabar();">
            {{ form_widget(form) }}
            <td width="15%"><label>Ejecutar en elemento</label></td>
            <td width="10%">
            <select id="seEjecuta" name="seEjecuta">
            <option id="NO">NO</option>
            <option id="SI">SI</option>            
            </select>
            </td> 

             <td width="5%">&nbsp;</td>
            
            <div class="buttons">
                <p>
                    <input type='submit'class="button-crud" value="Guardar" />
                    <span class="height20px">
                        &oacute;&nbsp;
                        <a class="button-crud" href="{{ path('admitag') }}">Cancelar</a>
                    </span>
                </p>
            </div>	
        </form>
    </div>
{% endblock contenido_izq %}

{% block javascripts_footer%}
    <script>
        var validatable = $("#form_new_tag").kendoValidator().data("kendoValidator");
        function grabar(){
            if (validatable.validate()){
                return true;
            }
            else{
               false; 
            }
        }
    </script>	
{% endblock javascripts_footer%}	