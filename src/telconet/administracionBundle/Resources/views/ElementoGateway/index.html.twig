{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}   
{% endblock %}
{% block javascripts%}
    {{ parent() }}    
    <script type="text/javascript" src="{{ asset('./bundles/administracion/js/ElementoGateway/index.js') }}"></script>
    <script>var iconoEjecutando = '<img src="{{ asset('public/images/images_crud/loading19.gif')}}" width="16" height="16" />';</script>
{% endblock %}

{% block contenido_izq %}

<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Listado Gateways</h1>
</div>
<div class="body_content k-content">
    <form action="{{ path('elementogateway_exportar') }}" method="post">
        
        <input type="hidden" id="nombre_hidden" name="nombre_hidden"/>
        <input type="hidden" id="marca_hidden" name="marca_hidden"/>
        <input type="hidden" id="estado_hidden" name="estado_hidden"/>
        <input type="hidden" id="empresa_hidden" name="empresa_hidden"/>
        
        <table width="100%" cellpadding="1" cellspacing='0'  border='0'>
            <tr>
                <td><div id='filtro'></div></td>
            </tr>	
            <tr>
                <td><div id="grid"></div></td>
            </tr>
        </table> 
    </form>
    <form action="{{ path('elementogateway_exportarSaldos') }}" method="post">
        <input type="hidden" id="ip_hidden" name="ip_hidden"/>
    </form>
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <div class="acciones_relacionadas">
		{% if is_granted('ROLE_46-2') %}
        <a class="button-nuevo-registro" href="{{ path('elementogateway_new') }}">
            <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
            &nbsp;Nuevo Gateway
        </a>
		{% endif %}
    </div>
{% endblock contenido_der %}