{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Escalabilidad Proceso</h1>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%"> Nombre Proceso:</th>
                <td width="15%">{{ escalabilidad.procesoId.nombreProceso }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Nombre Rol</th>        
                <td width="15%">{{ nombreRol }}</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Orden Escalabilidad:</th>
                <td>{% if escalabilidad.ordenEscalabilidad %}{{ escalabilidad.ordenEscalabilidad }}{% else %}1{% endif %}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Estado:</th>        
                <td width="15%">{{ escalabilidad.estado }}</td>
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admiescalabilidadproceso') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ escalabilidad.usrCreacion }}</td>

              {% if(escalabilidad.estado|lower=="modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ escalabilidad.usrUltMod }}</td>
              {% endif %}

              {% if(escalabilidad.estado|lower=="eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ escalabilidad.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ escalabilidad.feCreacion | date("d M Y") }}</td>

              {% if(escalabilidad.estado|lower=="modificado") %}
              <th>Fecha:</th>
              <td >{{ escalabilidad.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(escalabilidad.estado|lower=="eliminado") %}
              <th>Fecha:</th>
              <td>{{ escalabilidad.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ escalabilidad.feCreacion | date("H:i:s") }}</td>

              {% if(escalabilidad.estado|lower=="modificado") %}
              <th>Hora:</th>
              <td>{{ escalabilidad.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(escalabilidad.estado|lower=="eliminado") %}
              <th>Hora:</th>
              <td>{{ escalabilidad.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}


{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_52-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admiescalabilidadproceso_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Escalabilidad Proceso
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_52-4') %}
        <li>
            <a class="button-editar" href="{{ path('admiescalabilidadproceso_edit', { 'id': escalabilidad.id }) }}">
                &nbsp;Editar Escalabilidad Proceso
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_52-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admiescalabilidadproceso_delete', { 'id': escalabilidad.id }) }}">
                &nbsp;Eliminar Escalabilidad Proceso
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}

