{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Ver Detalle</h1>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre:</th>
                <td width="15%">{{ detalle.nombreDetalle }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Tipo:</th>        
                <td width="15%">{{ detalle.tipo }}</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Estado:</th>
                <td width="15%">{{ detalle.estado }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Descripci&oacute;n Detalle</th>              
                <td width="15%">{{ detalle.descripcionDetalle }}</td>
                <td width="1%"></td>
            </tr>

        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admidetalle') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ detalle.usrCreacion }}</td>

              {% if(detalle.estado=="Modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ detalle.usrUltMod }}</td>
              {% endif %}

              {% if(detalle.estado=="Eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ detalle.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ detalle.feCreacion | date("d M Y") }}</td>

              {% if(detalle.estado=="Modificado") %}
              <th>Fecha:</th>
              <td >{{ detalle.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(detalle.estado=="Eliminado") %}
              <th>Fecha:</th>
              <td>{{ detalle.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ detalle.feCreacion | date("H:i:s") }}</td>

              {% if(detalle.estado=="Modificado") %}
              <th>Hora:</th>
              <td>{{ detalle.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(detalle.estado=="Eliminado") %}
              <th>Hora:</th>
              <td>{{ detalle.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
    <ul class="form_actions">
		{% if is_granted('ROLE_114-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admidetalle_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Detalle
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_114-4') %}
        <li>
            <a class="button-editar" href="{{ path('admidetalle_edit', { 'id': detalle.id }) }}">                
                &nbsp;Editar Detalle
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_114-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admidetalle_delete', { 'id': detalle.id }) }}">                
                &nbsp;Eliminar Detalle
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}

