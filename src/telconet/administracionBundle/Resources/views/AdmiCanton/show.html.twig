{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Canton</h1>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Provincia:</th>   
                <td width="15%">{{ canton.provinciaId.nombreProvincia }}</td>   
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Nombre Cantón:</th>        
                <td width="15%">{{ canton.nombreCanton }}</td>  
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Es Capital Provincial:</th>
                <td>{{ canton.esCapital }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%"> Es Cabecera Cantonal:</th>
                <td>{{ canton.esCabecera }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Estado:</th>
                <td>{{ canton.estado }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%"> Sigla:</th>
                <td width="15%"> {{ canton.sigla }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Código Inec:</th>
                <td width="15%"> {{ canton.codigoInec }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%"> Región:</th>
                <td width="15%"> {{ canton.region }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Zona:</th>
                <td width="15%"> {{ canton.zona }} </td>       
                <td width="1%"></td>
                
                <td width="8%">&nbsp;</td>
                <th width="25%"></th>
                <td></td>        
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admicanton') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ canton.usrCreacion }}</td>

              {% if(canton.estado|lower=="modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ canton.usrUltMod }}</td>
              {% endif %}

              {% if(canton.estado|lower=="eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ canton.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ canton.feCreacion | date("d M Y") }}</td>

              {% if(canton.estado|lower=="modificado") %}
              <th>Fecha:</th>
              <td >{{ canton.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(canton.estado|lower=="eliminado") %}
              <th>Fecha:</th>
              <td>{{ canton.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ canton.feCreacion | date("H:i:s") }}</td>

              {% if(canton.estado|lower=="modificado") %}
              <th>Hora:</th>
              <td>{{ canton.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(canton.estado|lower=="eliminado") %}
              <th>Hora:</th>
              <td>{{ canton.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_25-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admicanton_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Cantón
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_25-4') %}
        <li>
            <a class="button-editar" href="{{ path('admicanton_edit', { 'id': canton.id }) }}">
                &nbsp;Editar Cantón
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_25-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admicanton_delete', { 'id': canton.id }) }}">
                &nbsp;Eliminar Cantón
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}