{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Ver Tipo de Elemento</h1>
</div>

<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Tipo Elemento:</th>                    
                <td width="15%">{{ tipoelemento.nombreTipoElemento }}</td>        
                <td width="1%"></td>

                <td width="9%">&nbsp;</td>
                <th width="25%">Descripci&oacute;n Tipo Elemento:</th>        
                <td width="15%">{{ tipoelemento.descripcionTipoElemento }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%">Clase Tipo Elemento:</th>        
                <td width="15%">{{ tipoelemento.claseTipoElemento }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">Estado:</th>                             
                <td width="15%">{{ tipoelemento.estado }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%">Es De:</th>        
                <td width="15%">{{ tipoelemento.esDe }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">&nbsp;</th>                             
                <td width="15%">&nbsp;</td>        
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admitipoelemento') }}">
                    Regresar
            </a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ tipoelemento.usrCreacion }}</td>

              {% if(tipoelemento.estado=="Modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ tipoelemento.usrUltMod }}</td>
              {% endif %}

              {% if(tipoelemento.estado=="Eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ tipoelemento.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ tipoelemento.feCreacion | date("d M Y") }}</td>

              {% if(tipoelemento.estado=="Modificado") %}
              <th>Fecha:</th>
              <td >{{ tipoelemento.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(tipoelemento.estado=="Eliminado") %}
              <th>Fecha:</th>
              <td>{{ tipoelemento.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ tipoelemento.feCreacion | date("H:i:s") }}</td>

              {% if(tipoelemento.estado=="Modificado") %}
              <th>Hora:</th>
              <td>{{ tipoelemento.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(tipoelemento.estado=="Eliminado") %}
              <th>Hora:</th>
              <td>{{ tipoelemento.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
    <ul class="form_actions">
		{% if is_granted('ROLE_127-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admitipoelemento_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Tipo Elemento
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_127-4') %}
        <li>
            <a class="button-editar" href="{{ path('admitipoelemento_edit', { 'id': tipoelemento.id }) }}">
                
                &nbsp;Editar Tipo Elemento
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_127-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admitipoelemento_delete', { 'id': tipoelemento.id }) }}">
                
                &nbsp;Eliminar Tipo Elemento
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}