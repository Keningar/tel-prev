{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Tipo de Contrato</h1>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Descripcion Tipo Contrato:</th>
                <td width="15%">{{ tipocontrato.descripcionTipoContrato }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%"> Nombre Empresa:</th>
                <td width="15%">{{ tipocontrato.empresaCod.nombreEmpresa }}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Tiempo Finalizacion:</th>
                <td width="15%">
					{% if tipocontrato.tiempoFinalizacion %}{{ tipocontrato.tiempoFinalizacion }}{% else %}0{% endif %}
					{% if tipocontrato.tiempoFinalizacion == 1 %}mes{% else %}meses{% endif %}
				</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%"> Tiempo Alerta Finalizacion:</th>
                <td width="15%">       
					{% if tipocontrato.tiempoAlertaFinalizacion %}{{ tipocontrato.tiempoAlertaFinalizacion }}{% else %}0{% endif %}
					{% if tipocontrato.tiempoAlertaFinalizacion == 1 %} semana{% else %} semanas{% endif %}
				</td>   
				<td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Estado:</th>
                <td>{{ tipocontrato.estado }}</td>        
                <td width="1%"></td>

                <td width="8%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admitipocontrato') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ tipocontrato.usrCreacion }}</td>

              {% if(tipocontrato.estado|lower=="modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ tipocontrato.usrUltMod }}</td>
              {% endif %}

              {% if(tipocontrato.estado|lower=="eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ tipocontrato.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ tipocontrato.feCreacion | date("d M Y") }}</td>

              {% if(tipocontrato.estado|lower=="modificado") %}
              <th>Fecha:</th>
              <td >{{ tipocontrato.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(tipocontrato.estado|lower=="eliminado") %}
              <th>Fecha:</th>
              <td>{{ tipocontrato.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ tipocontrato.feCreacion | date("H:i:s") }}</td>

              {% if(tipocontrato.estado=="modificado") %}
              <th>Hora:</th>
              <td>{{ tipocontrato.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(tipocontrato.estado|lower=="eliminado") %}
              <th>Hora:</th>
              <td>{{ tipocontrato.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_30-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admitipocontrato_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Tipo de Contrato
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_30-4') %}
        <li>
            <a class="button-editar" href="{{ path('admitipocontrato_edit', { 'id': tipocontrato.id }) }}">
                &nbsp;Editar Tipo de Contrato
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_30-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admitipocontrato_delete', { 'id': tipocontrato.id }) }}">
                &nbsp;Eliminar Tipo de Contrato
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}