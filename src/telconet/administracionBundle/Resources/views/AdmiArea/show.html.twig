{% extends "::layout.html.twig" %}
{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Area</h1>
</div>
<div class="body_content">
    <table class="formulario" width='100%' >
        <tbody>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Nombre Area:</th>
                <td width="15%">{{ area.nombreArea }}</td>  
                <td width="10%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Empresa:</th>
                <td width="15%">{% if EmpresaGrupo %}{{ EmpresaGrupo }}{% else %}N/A{% endif %}</td>
                <td width="10%">&nbsp;</td>
                <th width="25%"> Email Area:</th>
                <td width="15%">{% if area.emailArea %}{{ area.emailArea }}{% else %}N/A{% endif %}</td>        
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="8%">&nbsp;</td>
                <th width="25%"> Estado:</th>
                <td>{{ area.estado }}</td>     
                <td width="10%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
        </tbody>
    </table>
</div>	
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('admiarea') }}">Regresar</a>
        </span>
    </p>
</div>
<div class="body_content">
    <table class="formulario">
        <tbody>
            <tr>
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/agregar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%">Creador:</th>
              <td width="34%" >{{ area.usrCreacion }}</td>

              {% if(area.estado|lower=="modificado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/edit_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="11%" >Ult. Mod.:</th>
              <td width="34%">{{ area.usrUltMod }}</td>
              {% endif %}

              {% if(area.estado|lower=="eliminado") %}
              <td width="10%" rowspan="3"><img src="{{ asset('public/images/images_crud/eliminar_64.png')}}" hspace="3" vspace="3" alt="" border="0" align="absmiddle" /></td>
              <th width="6%">Eliminado:</th>
              <td width="34%">{{ area.usrUltMod }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Fecha:</th>
              <td >{{ area.feCreacion | date("d M Y") }}</td>

              {% if(area.estado|lower=="modificado") %}
              <th>Fecha:</th>
              <td >{{ area.feUltMod  | date("d M Y")}}</td>
              {% endif %}

              {% if(area.estado|lower=="eliminado") %}
              <th>Fecha:</th>
              <td>{{ area.feUltMod | date("d M Y") }}</td>
              {% endif %}
            </tr>
            <tr>
              <th>Hora:</th>
              <td>{{ area.feCreacion | date("H:i:s") }}</td>

              {% if(area.estado=="modificado") %}
              <th>Hora:</th>
              <td>{{ area.feUltMod | date("H:i:s") }}</td>
              {% endif %}

              {% if(area.estado|lower=="eliminado") %}
              <th>Hora:</th>
              <td>{{ area.feUltMod | date("H:i:s") }}</td>
              {% endif %}
            </tr>

        </tbody>
    </table>
</div>
{% endblock contenido_izq %}

{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_46-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('admiarea_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Area
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_46-4') %}
        <li>
            <a class="button-editar" href="{{ path('admiarea_edit', { 'id': area.id }) }}">
                &nbsp;Editar Area
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_46-8') %}
        <li>
            <a class="button-eliminar" href="{{ path('admiarea_delete', { 'id': area.id }) }}">
                &nbsp;Eliminar Area
            </a>
        </li>
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}