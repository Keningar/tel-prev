{% extends "::layout.html.twig" %}

{% block javascripts%}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('./bundles/seguridad/js/SeguPerfilPersona/show.js') }}"></script>
{% endblock %}

{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
    <h1>Ver Perfil Persona</h1>
</div>
<div class="body_content">
    <table class="record_properties">
        <tbody>
            <tr>
                <td width="10%">&nbsp;</td>
                <th width="25%">Nombre Persona:</th>
                <td width="15%">{{ nombre_persona }}</td>        
                <td width="1%"></td>
                <td width="9%">&nbsp;</td>
                <th width="25%">&nbsp;</th>        
                <td width="15%">&nbsp;</td>
                <td width="1%"></td>
            </tr>
            <tr>
                <td width="10%">&nbsp;</td>
                <td colspan="6"><br/><br/><div id="grid"></div></td>
                <td width="1%">&nbsp;</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="buttons">
    <p>
        <span class="height20px">
            <a class="button-crud" href="{{ path('seguperfilpersona') }}">Regresar</a>
        </span>
    </p>
</div>
<br/><br/>
{% endblock contenido_izq %}

{% block contenido_der %}
    <ul class="form_actions" style="width:auto;">
		{% if is_granted('ROLE_20-2') %}
        <li>
            <a class="button-nuevo-registro" href="{{ path('seguperfilpersona_new') }}">
                <img src="{{ asset('public/images/images_crud/new_plus.png')}}" width="15" height="15" />
                &nbsp;Nuevo Perfil Persona
            </a>
        </li>
		{% endif %}
        <li>
            &nbsp;
        </li>
		{% if is_granted('ROLE_20-4') %}
        <li>
            <a class="button-editar" href="{{ path('seguperfilpersona_edit', { 'id': id_persona }) }}">
                &nbsp;Editar Perfil Persona
            </a>
        </li>
		{% endif %}
		{% if is_granted('ROLE_20-8') %}
        <!--<li>
            <a class="button-eliminar" href="{{ path('seguperfilpersona_delete', { 'id': id_persona }) }}">
                <img src="{{ asset('public/images/images_crud/trash.png')}}"/>
                &nbsp;Eliminar Perfil Persona
            </a>
        </li>-->
		{% endif %}
    </ul>
    <div class="titulo-acciones-relacionadas">
        Acciones Relacionadas
    </div>
    <ul class="listado_acciones_relacionadas">

    </ul>
{% endblock contenido_der %}
