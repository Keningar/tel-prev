{% extends "::layout.html.twig" %}

{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Editar Item Menu</h1>
</div>
<span class="campos-requeridos">* Campos requeridos</span>
<div class="body_content">
	<form action="{{ path('sistitemmenu_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="formulario">
		{{ form_widget(edit_form) }}
		<div class="buttons">
			<p>
				<button type="submit" class="button-crud">Editar</button>
				<span class="height20px">
					&oacute;&nbsp;
					<a class="button-crud" href="{{ path('sistitemmenu') }}">
						cancelar
					</a>
				</span>
			</p>
		</div>
	</form>
</div>
{% endblock contenido_izq %}
{% block contenido_der %}
	{% if (entity.estado != "Eliminado") %}
		<ul class="form_actions">
			<li>
				<form action="{{ path('sistitemmenu_delete', { 'id': entity.id }) }}" method="post" name="delete_form">
					{{ form_widget(delete_form) }}
					<a class="button-eliminar" href="javascript:document.delete_form.submit();">Eliminar</a>
				</form>
			</li>
		</ul>
		<div class="titulo-acciones-relacionadas">
			Acciones Relacionadas
		</div>
		<ul class="listado_acciones_relacionadas">
			<li>
				<a class="listado_ac_tablas" href="#">
					opcion 1
				</a>
			</li>
			<li>
				<a class="listado_ac_tablas" href="#">
					opcion 2
				</a>
			</li>
			<li>
				<a class="listado_ac_tablas" href="#">
					opcion 3
				</a>
			</li>
		</ul>
	{% endif %}
{% endblock contenido_der %}
{% block javascripts_footer%}
	
{% endblock %}

