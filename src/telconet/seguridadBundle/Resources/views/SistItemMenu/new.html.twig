{% block javascripts_footer%}
<script>
    function cambiarObligatorioRazon()
    {
            $('label[for=sistitemmenu_urlImagen]').removeClass('campo-obligatorio');
            $('label[for=sistitemmenu_codigo]').removeClass('campo-obligatorio');
            $('#sistitemmenu_urlImagen').removeAttr('required');
            $('#sistitemmenu_codigo').removeAttr('required');
    }

    function cambiarObligatorio()
    {
            $('label[for=sistitemmenu_razonSocial]').removeClass('campo-obligatorio');
            $('label[for=sistitemmenu_razonSocial]').html('Razon Social:');
            $('#sistitemmenu_razonSocial').removeAttr('required');
    }

   
</script>
{% endblock %}
