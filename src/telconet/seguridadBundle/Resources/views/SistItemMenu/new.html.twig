{% extends "::layout.html.twig" %}

{% block contenido_izq %}
<div id="titulo_content">
    <img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Nuevo Item Menu</h1>
</div>
<span class="campos-requeridos">* Campos requeridos</span>
<div class="body_content">
	{% if error is defined %}
        <div class="error">{{ error }}</div>
    {% endif %}
	<form action="{{ path('sistitemmenu_create') }}" method="post" {{ form_enctype(form) }} class="formulario">
		{{ form_widget(form) }}
		
		<!-- Window HTML -->
            
            <div class="buttons">
                    <p>
                            <button type="submit" class="button-crud">Guardar</button>
                            <span class="height20px">
                                    &oacute;&nbsp;
                                    <a class="button-crud" href="{{ path('sistitemmenu') }}">
                                            cancelar
                                    </a>
                            </span>
                    </p>
            </div>
	</form>
</div>
{% endblock contenido_izq %}
