{% extends "::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style scoped="scoped">
        .alineando {
                left: 42em;
                position: absolute;
                top: 44em;
        }
    </style>
    
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    
    <script type="text/javascript" src="{{ asset('./bundles/tecnico/js/InfoElementoSplitter/new.js') }}"></script>
{% endblock %}

{% block contenido_izq %}
    <div id="titulo_content">
		<img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
        <h1>Ingreso de Splitter</h1>
    </div>
    
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="errormessage">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
    <div class="body_content">
        <form id='form_new_elemento_splitter' action="{{ path('elementosplitter_createSplitter') }}" method="post" {{ form_enctype(form) }} class='formulario' novalidate="novalidate" onsubmit="return validacionesForm();">
            <table width="100%" border="0" class="box-section-content">
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.nombreElemento) }}</td>
                    <td width="10%" class='formularioAdministracion'>{{ form_widget(form.nombreElemento) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.modeloElementoId) }}</td>
                    <td width="10%">{{ form_widget(form.modeloElementoId) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.nivel) }}</td>
                    <td width="10%">{{ form_widget(form.nivel) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.contenidoEn) }}</td>
                    <td width="10%"><div id='comboContenido' required="true"></div></td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.elementoContenedorId) }}</td>
                    <td width="10%"><div id='comboElemento' required="true"></div></td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">&nbsp;</td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(form.descripcionElemento) }}</td>
                    <td width="10%">{{ form_widget(form.descripcionElemento) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>
                    <td width="10%"></td>
                    <td width="5%">{{ form_widget(form.elementoContenedorId) }}</td>
                    <td width="5%">&nbsp;</td>
                </tr>
            </table>
            <div class="buttons">
                <p>
                    <input type='submit'class="button-crud" value="Guardar" />
                    <span class="height20px">
                        &oacute;&nbsp;
                        <a class="button-crud" href="{{ path('elementosplitter') }}">Cancelar</a>
                    </span>
                </p>
            </div>	
            {{ form_widget(form._token) }}
        </form>
    </div>
{% endblock contenido_izq %}

{% block javascripts_footer%}
    
{% endblock javascripts_footer%}	