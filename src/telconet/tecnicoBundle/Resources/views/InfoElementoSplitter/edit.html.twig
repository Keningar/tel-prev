{% extends "::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts%}
	{{ parent() }}

<script type="text/javascript" src="{{ asset('./bundles/tecnico/js/InfoElementoSplitter/edit.js?1') }}"></script>
{% endblock %}

{% block contenido_izq %}
<div id="titulo_content">
	<img src="{{ asset('public/images/'~ item.urlImagen | default('tools1.png') ~ '') }}" class="imagen-titulo-content">
	<h1>Editar Splitter</h1>
</div>

{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="errormessage">
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="body_content">
    <form id='form_edit_buffer' action="{{ path('elementosplitter_updateSplitter', { 'id': splitter.id }) }}" method="post" {{ form_enctype(edit_form) }} class="formulario">
        <table width="100%" border="0" class="box-section-content">
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.nombreElemento) }}</td>
                    <td width="10%">{{ form_widget(edit_form.nombreElemento) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.modeloElementoId) }}</td>
                    <td width="10%">{{ form_widget(edit_form.modeloElementoId) }}</td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.contenidoEn) }}</td>
                    <td width="10%"><div id='comboContenido' required="true"></div></td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.elementoContenedorId) }}</td>
                    <td width="10%"><div id='comboElemento' required="true"></div></td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.descripcionElemento) }}</td>
                    <td width="10%">{{ form_widget(edit_form.descripcionElemento) }}</td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.nivel) }}</td>
                    <td width="10%">{{ form_widget(edit_form.nivel) }}</td>
                    <td width="5%">&nbsp;</td>
                </tr>
                <tr>
                    {#<td width="5%">&nbsp;</td>
                    <td width="24%">{{ form_label(edit_form.alturaSnm) }}</td>
                    <td width="10%"><input type="text" name="alturaSnm" value="{{ubicacion.alturaSnm}}"></td>
                    <td width="5%">&nbsp;</td>
                    <td width="24%"></td>#}
                    <td width="10%">
                        <input type="hidden" name="idUbicacion" value="{{ ubicacion.id }}">
                    </td>
                    <td width="5%">{{ form_widget(edit_form.elementoContenedorId) }}</td>
                    <td width="5%">&nbsp;</td>
                </tr>
            </table>
        <div class="buttons">
            <p>
                <button class="button-crud" type='button' onClick='return grabar();' >Guardar</button>
                <span class="height20px">
                    &oacute;&nbsp;
                    <a class="button-crud" href="{{ path('elementosplitter') }}">
                        Cancelar
                    </a>
                </span>
            </p>
        </div>
    </form>
</div>
{% endblock contenido_izq %}

{% block javascripts_footer%}
<script>
    
    function grabar()
    {
        document.forms[0].submit();
    }
    </script>
{% endblock javascripts_footer%}

{% block contenido_der %}
    <ul class="form_actions">
        <li>
            
        </li>
    </ul>
    <div class="titulo-acciones-relacionadas">
            Acciones Relacionadas
    </div>

{% endblock contenido_der %}
