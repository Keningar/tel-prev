{% extends "::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}

{% endblock %}

{% block javascripts%}
	{{ parent() }}
<script type="text/javascript" src="{{ asset('./bundles/tecnico/js/InfoElementoRouterCliente/edit.js') }}"></script>
<script>

    var url_getCantones = '{{path("admicanton_buscarCantones") }}';
    var url_getParroquias = '{{path("admiparroquia_buscarParroquias") }}';

